@model IEnumerable<DSWI_CL1_Sanchez_David_Aaron.Models.Pacientes>

@{
    ViewData["Title"] = "ListarPacientes";
}

<h1>ListarPacientes</h1>

<p>
    <a asp-action="crearPaciente">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodPaciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodTipoDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesTipoDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodPaciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodTipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesTipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    @for (int i = 0; i < (int)ViewBag.numPagina; i++)
    {
        <a asp-action="ListarPacientes"
           asp-route-pag="@(i+1)"
           class="@((i+1) == ViewBag.paginaActual ? "btn btn-success" : "btn btn-primary")">@($"{i + 1}")</a>
    }
</div>
